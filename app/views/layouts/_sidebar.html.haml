.sidebar
  .header
    .header__name
      %h3= current_user.name
    %ul.header__lists
      %li.list
      = link_to new_group_path, class: 'chat-user__action'  do
        %i.fa.fa-pencil-square-o
      %li.list
      = link_to edit_user_registration_path do
        %i.fa.fa-cog
  .groups
    - @groups.each do |groups|
      = render partial: "groups/group", locals: { groups: groups }
